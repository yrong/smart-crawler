{
  "port": 4000,
  "name": "crawler",
  "perPageSize": 2000,
  "logger": {
    "appenders": [
      {
        "type": "console"
      },
      {
        "type": "file",
        "filename": "crawler.log",
        "maxLogSize": 20480,
        "numBackups": 5,
        "category": "crawler"
      }
    ],
    "replaceConsole": true,
    "defaultLevel": "INFO"
  },
  "elasticsearch": {
    "host": "localhost",
    "port": 9200,
    "index": "crawler"
  },
  "redis": {
    "host": "localhost",
    "port": 6379
  },
  "crawlers": {
    "concurrency": 5,
    "cnpc_today_news": {
      "url": "http://www.cnpc/zhlm/jrgz/jrgz/Pages/more.aspx",
      "absolute_link_url": true,
      "max_page": 5,
      "selector": {
        "link": "div.w_newslistpage_body ul li a[href]",
        "content": ".wenzi2016"
      }
    },
    "cnpc_photo_news": {
      "url": "http://www.cnpc/zhlm/tpxw/Pages/index.aspx",
      "absolute_link_url": true,
      "max_page": 5,
      "selector": {
        "link": "div.w_newslistpage_body ul li a[href]",
        "content": ".wenzi2016"
      }
    },
    "cnpc_ag_photo_news": {
      "url": "http://10.161.134.146/ShowInfo.aspx?channel=1&&daohang=NewsCenter&&sParamValue=%E5%9B%BE%E7%89%87%E6%96%B0%E9%97%BB",
      "selector": {
        "link": "#div_content table tr td a[href]",
        "content": "#divContent"
      }
    }
  }
}